<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_girdview_image"
            android:paddingTop="2dp"
            android:layout_width="22sp"
            android:layout_height="22sp"
            android:paddingLeft="6dp"
            android:scaleType="fitCenter"
            android:background="@mipmap/clock2"/>
        <TextView
            android:id="@+id/item_girdview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="6dp"
            android:layout_marginBottom="6dp"
            android:textSize="16sp"
            android:textColor="#212121"
            android:textStyle="bold"
            android:layout_alignParentTop="true" />
    </LinearLayout>

    <com.feidian.ek.hzaumooc.View.NoScrollGridView
        android:id="@+id/item_girdview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:horizontalSpacing="8dp"
        android:numColumns="2"
        android:verticalSpacing="16dp" />
    <TextView
        android:id="@+id/item_girdview_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#33B5E5"
        android:padding="10dp"
        android:text="查看更多......"/>

</LinearLayout>
