<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools">

    <ImageView android:id="@+id/pro_img"
               android:layout_width="65dp"
               android:layout_height="65dp"
               android:layout_margin="5dp"/>
    <TextView
            android:id="@+id/pro_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pro_img"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#212121"
            android:maxEms="6"
            android:text="洗衣粉洗衣粉洗衣粉"/>

    <TextView
            android:id="@+id/pro_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pro_img"
            android:layout_below="@+id/pro_name"
            android:layout_marginRight="40dp"
            android:padding="10dp"
            android:singleLine="true"
            android:maxEms="6"
            android:text="10件/箱"/>
    <TextView
            android:id="@+id/cat_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/pro_name"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:background="#f398aa"
            android:textColor="#ffffff"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="12sp"
            android:text="+"/>
    <View
            android:id="@+id/cat_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:gravity="center_horizontal"
            android:layout_below="@+id/pro_desc"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true"
            android:background="#f39800"/>

</RelativeLayout>